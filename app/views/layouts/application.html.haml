%html
  %head
    %title ActiVid
    = stylesheet_link_tag    "application"#, media: "all", "data-turbolinks-track" => true
    = javascript_include_tag "application"#, "data-turbolinks-track" => true
    <link href='http://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,700,600,400,300' rel='stylesheet' type='text/css'>
    %script(type='text/javascript' src='https://js.stripe.com/v2/')
    = csrf_meta_tags
  %body(class="#{content_for(:body_class)}")
    #container
      %header
        %nav.navbar.navbar-default.navbar-fixed-top(role="navigation")
          .container
            .navbar-header
              = link_to 'ActiVid', root_path, class: 'navbar-brand'
            .collapse.navbar-collapse
              %ul.nav.navbar-nav.navbar-right
                %li
                  .ajax-spinner.inactive
                    = image_tag 'ajax-spinner.gif'
      .container
        = yield

      %footer
        .container
          .social
            = link_to "Facebook", "https://www.facebook.com/actividfilms", class: "facebook", title: "Facebook", target: "_blank"
            = link_to "Twitter", "https://twitter.com/actividfilms", class: "twitter", title: "Twitter", target: "_blank"
            = link_to "Instagram", "https://instagram.com/actividfilms", class: "instagram", title: "Instagram", target: "_blank"
            = link_to "YouTube", "https://youtube.com/actividfilms", class: "youtube", title: "YouTube", target: "_blank"
            = link_to "Vimeo", "https://vimeo.com/activid", class: "vimeo", title: "Vimeo", target: "_blank"
          %nav
            - if cms_site
              - cms_info_pages.each do |page|
                = link_to page.label, page.full_path

    :javascript
      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', 'UA-50128766-1']);
      _gaq.push(['_trackPageview']);

      (function() {
      var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
      ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
      var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();





    :javascript
      Stripe.setPublishableKey(#{Rails.application.secrets.stripe_publishable_key.to_json})
